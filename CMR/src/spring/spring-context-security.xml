<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.1.xsd">

	<!-- Security Service -->
	<bean name="securityServiceRequestHandlerServlet"
		class="org.springframework.web.context.support.HttpRequestHandlerServlet">
	</bean>

	<bean id="securityServiceServletHolder" class="org.mortbay.jetty.servlet.ServletHolder">
		<property name="name" value="securityServiceExporter" />
		<property name="servlet" ref="securityServiceRequestHandlerServlet" />
	</bean>


	<bean id="securityServiceServiceMapping" class="org.mortbay.jetty.servlet.ServletMapping">
		<property name="servletName" value="securityServiceExporter" />
		<property name="pathSpec" value="/remoting/SecurityService" />
	</bean>
	<!-- END -->

</beans>